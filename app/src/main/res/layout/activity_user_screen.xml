<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vaibhav.iiitd.com.grievanceredressal.UserScreen">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tb_enrollment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Enrollment Number"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:id="@+id/tb_full_name"
        android:layout_below="@+id/tb_enrollment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/tb_grievance"
        android:gravity="left"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:maxLines="4"
        android:lines="4"
        android:hint="Enter your complaint"
        android:layout_below="@+id/tb_full_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:text="Submit !"
        android:layout_height="wrap_content"
        android:onClick="onSubmitButtonPressed"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tb_full_name"
        android:layout_alignStart="@+id/tb_full_name"
        android:id="@+id/button" />
</RelativeLayout>
